    public static void main(String[] args) {
            
    
   
        ClasseConcatena3 c = new ClasseConcatena3();

        // Definindo as partes da mensagem
        String parte1 = "Ol√°,";
        String parte2 = " mundo!";


        String mensagem = c.juntar(parte1, parte2);

        
